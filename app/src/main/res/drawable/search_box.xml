<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <size android:width="300dp" />
            <corners android:radius="8dp"/>
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <padding android:top="0dp" android:bottom="1dp" android:left="-2dp" android:right="0dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <size android:width="300dp" />
            <corners android:radius="8dp"/>
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <padding android:top="0dp" android:bottom="1dp" android:left="-2dp" android:right="0dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <size android:width="300dp" />
            <corners android:radius="8dp"/>
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <padding android:top="0dp" android:bottom="4dp" android:left="-2dp" android:right="0dp"/>
        </shape>
    </item>
</selector>