<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="@color/barWhite">

    <ImageView
        android:id="@+id/article_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/article_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:paddingTop="2dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/article_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/article_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/announce_banner"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/article_sum"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_add"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/article_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
        <ImageView
            android:id="@+id/article_subtraction"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_rest"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>