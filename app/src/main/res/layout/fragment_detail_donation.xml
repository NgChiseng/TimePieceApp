<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context="com.idbc.ngchiseng.timepieceapp.DetailDonationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detail_donation_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/detail_donation_text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/announce_banner"
                android:textSize="14sp"
                android:text="@string/cause"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/detail_donation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="295dp"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:text="@string/amount_to_donate"
                fontPath="fonts/MyriadPro-SemiboldCond.otf"/>

            <ImageView
                android:id="@+id/detail_donation_subtraction"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_rest"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingStart="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="$"/>
            <TextView
                android:id="@+id/detail_donation_num_dollars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingEnd="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
            <ImageView
                android:id="@+id/detail_donation_sum"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_add"/>

        </LinearLayout>

        <View
            android:layout_width="295dp"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/detail_donation_button"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/circle1"
            android:textAlignment="center"
            android:textColor="@color/barWhite"
            android:text="@string/detail_shopping"/>

        <View
            android:layout_width="295dp"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            android:paddingStart="10dp"
            android:paddingTop="13dp"
            android:text="@string/detail_description" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:text="@string/detail_info"/>

        <View
            android:layout_width="295dp"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/detail_donation_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="13sp"
            android:padding="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/lightGray"/>
    </LinearLayout>

</ScrollView>
